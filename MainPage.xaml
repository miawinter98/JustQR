<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JustQR.MainPage">
    <ScrollView>
        <Grid Padding="10" RowSpacing="25" HorizontalOptions="Center" MaximumWidthRequest="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border Stroke="Black" StrokeThickness="1">
                <Image x:Name="QrImage" Aspect="AspectFit" Source="logo.png" />
            </Border>

            <Editor Grid.Row="1" x:Name="TextEditor" TextChanged="TextEditor_OnTextChanged"
                    Placeholder="https://example.com"
                    HeightRequest="100" />

            <Button Grid.Row="2" Text="Save as..." Clicked="Button_OnClicked" />
        </Grid>
    </ScrollView>

</ContentPage>