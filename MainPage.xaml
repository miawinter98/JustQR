<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JustQR.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="25">
            <Border HeightRequest="200" 
                    Stroke="Black" StrokeThickness="1">
                <Image x:Name="QrImage" Aspect="AspectFit" Source="dotnet_bot.png" />
            </Border>

            <Editor x:Name="TextEditor" TextChanged="TextEditor_OnTextChanged"
                    Placeholder="https://example.com"
                    HeightRequest="100" />

            <Button Text="Save as..." Clicked="Button_OnClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>